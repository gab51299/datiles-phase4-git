<br><br>
<form style = "padding: 25px 50px !important;">
  <div class = "form-row">
    <%= form_with(model: personal, local: true) do |form| %>
      <% if personal.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(personal.errors.count, "error") %> prohibited this personal from being saved:</h2>
  
          <ul>
            <% personal.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group col">
        <label for="exampleInputEmail1">Email address</label>
        <div><%= form.text_field :email, placeholder: "email@website.com" %></div>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      
      <div class="form-group col">
        <label for="exampleTel">Telephone Number</label>
        <div><%= form.text_field :tel, placeholder: "XXXX-YYYY" %></div>
      </div>
  
      
      <div class="form-group col">
        <label for="exampleCell">Mobile Number</label>
        <div><%= form.text_field :mobile, placeholder: "+63 XXX-YYY-ZZZZ" %></div>
      </div>
  </div>
      <div class="form-group">
        <label for="exampleIDtype">ID Type</label>
        <div><%= form.select :idtype, ['Gold', 'Emerald','Platinum']%></div>
      </div>
  
      
      <div class="form-group">
        <label for="exampleReward">Reward Type</label>
        <div><%= form.select :rewardtype, ['Regular', 'Upgraded','Unlimited']%></div>
      </div>

      <br>

      <button class="btn">
        <%= form.submit %>
      </button>
    <% end %>
</form>
